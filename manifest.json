{
	"manifest_version": 3,
	"name": "Iframe CSS Injector for Bitrix24",
	"version": "1.0",
	"description": "Injects CSS into iframes on Bitrix24 pages",
	"permissions": ["scripting"],
	"host_permissions": ["*://*.bitrix24.ru/*"],
	"content_scripts": [
		{
			"matches": ["*://*.bitrix24.ru/*"],
			"js": ["contentScript.js"],
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["script.js", "styles.css"],
			"matches": ["*://*.bitrix24.ru/*"]
		}
	]
}
