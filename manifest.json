{
	"manifest_version": 3,
	"name": "Iframe CSS Injector for Bitrix24",
	"version": "1.0",
	"description": "Injects CSS into iframes on Bitrix24 pages",
	"permissions": ["storage", "activeTab"],
	"host_permissions": ["*://*.bitrix24.ru/*"],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*.bitrix24.ru/*"],
			"js": ["contentScript.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["styles.css", "iframe.css"],
			"matches": ["*://*.bitrix24.ru/*"]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	}
}
